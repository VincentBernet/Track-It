{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": true,
						"enumMemberCase": "CONSTANT_CASE",
						"conventions": [
							{
								"selector": {
									"kind": "objectLiteralMember"
								},
								"formats": [
									"camelCase",
									"snake_case"
								]
							},
							{
								"selector": {
									"kind": "typeMember"
								},
								"formats": [
									"camelCase",
									"snake_case"
								]
							}
						]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {}
	},
	"files": {
		"ignore": [
			"build",
			"dist",
			"node_modules"
		]
	}
}